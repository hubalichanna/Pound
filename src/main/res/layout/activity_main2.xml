<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/Tm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="TM"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="305dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/blackpound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="POUND"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="70dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="YOUR MOVE."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="SIGN UP"
         android:layout_centerHorizontal="true"
         android:textSize="35dp"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:layout_marginTop="185dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="Email Address"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="275dp"
        android:layout_marginHorizontal="35dp"
        />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="  username@hotmail.com"
    android:inputType="textEmailAddress"
    android:textColorHint="#737373"
    android:textColor="@color/white"
    android:textSize="15dp"
    android:layout_marginTop="305dp"
    android:layout_marginHorizontal="35dp"
    android:background="@drawable/emailborder"
    android:padding="10dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="352dp"
        android:layout_marginHorizontal="35dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Password123"
        android:inputType="textPassword"
        android:textColorHint="#737373"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="385dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/emailborder"
        android:padding="10dp"
/>

    <Button
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:layout_marginTop="435dp"
            android:layout_marginHorizontal="35dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"

/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
         android:textColor="#737373"
        android:layout_marginTop="478dp"
        android:layout_marginHorizontal="35dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#D6D6D6"
        android:layout_marginTop="500dp"
        android:layout_marginHorizontal="35dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"

/>

    <Button
        android:id="@+id/discord"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:text="Discord"
        android:layout_marginTop="538dp"
        android:layout_marginHorizontal="20dp"

        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        />

    <Button
        android:id="@+id/twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:layout_marginTop="586.5dp"
        android:layout_marginHorizontal="35dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        />

    <Button
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:layout_marginTop="630dp"
        android:layout_marginHorizontal="35dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"

        />

    <TextView
        android:id="@+id/Tm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="TM"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="305dp"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/blackpound2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:text="POWERED BY BLACKPOUND"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="normal" />
</RelativeLayout>
